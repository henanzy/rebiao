<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "http://mybatis.org/dtd/mybatis-3-mapper.dtd" "mybatis-3-mapper.dtd" >
<mapper namespace="com.hnzy.rb.dao.CxRbDao">
	<resultMap type="CxRb" id="cxrb">
		<result property="rbAd" column="RbAd" />	
		<result property="rblb" column="Rblb" />
		<result property="qgId" column="QgID"/>
	</resultMap>
		<!-- 查询到的热表地址更新到数据库 -->
		<update id="update" parameterType="CxRb">
		 update T_CxRbAd set RbAd=#{rbAd},QgID=#{qgId} where Rbfl=#{rbfl}
		</update>
		<!-- 获取所有的热表地址 -->
		<select id="selectRbId" resultMap="cxrb">
		  select * from T_CxRbAd where RbAd is not null and QgID is not null
		</select>
		<update id="updateRbId">
		update T_CxRbAd set RbAd=null,QgID=null 
		</update>
</mapper>
