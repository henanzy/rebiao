<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "http://mybatis.org/dtd/mybatis-3-mapper.dtd" "mybatis-3-mapper.dtd" >
<mapper namespace="com.hnzy.rb.dao.JzqDao">
<resultMap type="Jzq" id="jzq">
		<id property="id" column="ID" />
		<result property="jzqId" column="JzqID" />
		<result property="xqName" column="XqName" />
		<result property="status" column="Status" />
		<result property="jzqIp" column="JzqIP" />
		<result property="jzqPort" column="JzqPort" />
		<result property="hesName" column="HESName" />
		<result property="installAd" column="InstallAd" />
		<result property="updateTime" column="UpdateTime" />
		<result property="jzqxt" column="jzqxt" />
</resultMap>
<!-- 根据集中器IP查找集中器ID -->
<select id="findJzqID" resultMap="jzq" parameterType="Jzq">
 select JzqID from T_JzqInfo  where JzqIP=#{jzqIp} and JzqPort=#{port}
</select>
<update id="updateStTim" parameterType="Jzq">
update T_JzqInfo set Status=#{status} ,UpdateTime=#{updateTime} where JzqID=#{jzqID}
</update>
<update id="updateIpPort" parameterType="Jzq">
update T_JzqInfo set JzqPort=#{port},JzqIP=#{jzqIp}, Status='1',UpdateTime=#{updatTime} where JzqID=#{jzqID}
</update>
<update id="updateIpPortByXt" parameterType="Jzq">
update T_JzqInfo  set JzqPort=#{port},JzqIP=#{jzqIp}, Status='1',UpdateTime=#{updatTime} where jzqxt=#{jzqxt}
</update>
</mapper>
